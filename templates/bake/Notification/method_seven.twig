    /**
     * Get the Seven SMS representation of the notification
     *
     * @param \Cake\Datasource\EntityInterface|\Crustum\Notification\AnonymousNotifiable $notifiable The entity receiving the notification
     * @return \Crustum\SevenNotification\Message\SevenMessage
     */
    public function toSeven(EntityInterface|AnonymousNotifiable $notifiable): SevenMessage
    {
        return SevenMessage::create('{{ notificationName }}: You have a new notification');
    }
